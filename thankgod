pipeline{
    agent any
    tools{
        maven 'maven3.9.6'
    }
    stages{
        stage('1.GitHubCodeCheckout'){
            steps{
                git "https://github.com/fvder/maven-web-application.git"
            }
        }
        stage('2.CheckovIACscan'){
            steps{
                sh "checkov -s -f ./Dockerfile"
            }
        }
        stage('3.Build'){
            steps{
                sh "mvn clean package"
            }
        }
        stage('4.SonarQubeSAST/SCQA'){
            steps{
                sh "mvn sonar:sonar"
            }
        }
        stage('5.SnykSCA'){
            steps{
                withCredentials([string(credentialsId: 'SNYK_TOKEN', variable: 'SNYK_TOKEN')]) {
                    sh "mvn snyk:test -fn"
                }
            }
        }
        stage('6.NexusUpload'){
            steps{
                sh "mvn deploy"
            }
        }
        stage('7.DockerImageBuild'){
            steps{
                sh "docker build -t fvder/tesla ."
            }
        }
        stage('8.SnykContainerSecurityScan'){
            steps{
                withCredentials([string(credentialsId: 'SNYK_TOKEN', variable: 'SNYK_TOKEN')]) {
                    sh "snyk container test fvder/tesla -fn"
                }
            }
        }
        stage('9.DockerImagePush+RemoveDockerImage'){
            steps{
                withCredentials([usernamePassword(credentialsId: 'GitHub', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh "docker push fvder/tesla"
                    sh 'docker rmi $(docker images -a)'
                }
            }
        }
    }
}
